<% layout('layouts/boilerplate') %> 
<h1>All Journals</h1>
<% for( let journal of journals ) { %>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <%if (journal.images.length) {%>
                <img class="img-fluid" alt="" src="<%=journal.images[0].url%>">
                <% } else {%>
                <img class="img-fluid" alt=""
                    src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/65/No-Image-Placeholder.svg/1665px-No-Image-Placeholder.svg.png">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= journal.title %> </h5>
                    <p class="card-text"><%= journal.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= journal.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/journals/<%=journal._id%>">View <%=journal.title%></a>
                </div>
            </div>
        </div>
    </div>
<% } %>
