<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Edit Journal</h1>
    <div class="col-6 offset-3">
        <form action="/journals/<%=journal._id%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="journal[title]"
                    value="<%=journal.title %>" required>
                <div class="valid-feedback">
                    OK!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="journal[location]"
                    value="<%=journal.location %>" required>
                <div class="valid-feedback">
                    OK!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="journal[image]"
                    value="<%=journal.image %>" required>
                <div class="valid-feedback">
                    OK!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Location Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="journal[price]" value="<%=journal.price %>" required>
                    <div class="valid-feedback">
                        OK!
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="journal[description]" required><%= journal.description%></textarea>
                <div class="valid-feedback">
                    OK!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Journal</button>
            </div>
        </form>
        <a href="/journals/<%= journal._id%>">Back To Journal</a>

    </div>
</div>
