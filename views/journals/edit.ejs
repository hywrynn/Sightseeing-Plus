<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Edit Journal</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/journals/<%=journal._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="journal[title]"
                    value="<%=journal.title %>" required>
                <div class="valid-feedback">
                    OK!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="journal[location]"
                    value="<%=journal.location %>" required>
                <div class="valid-feedback">
                    OK!
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="file" class="form-control" id="image" name="image" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Location Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="journal[price]" value="<%=journal.price %>" required>
                    <div class="valid-feedback">
                        OK!
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="journal[description]" required><%= journal.description%></textarea>
                <div class="valid-feedback">
                    OK!
                </div>
            </div>
            <div class="mb-3">
                <% journal.images.forEach(function(img, i) {  %>
                <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i%>">Delete?</label>
                <% })%>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Journal</button>
            </div>
        </form>
        <a href="/journals/<%= journal._id%>">Back To Journal</a>

    </div>
</div>
